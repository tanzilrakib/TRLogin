<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authorized"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rakib.trlogin.AuthorizedActivity">

    <TextView
        android:textSize="32sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#0e4d9e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorized_tv_hello_user"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="28sp"
        android:textAlignment="center"
        android:text=""
        android:textColor="#0e2b51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorized_tv_timestamp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColorLink="@android:color/holo_blue_dark"

        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/authorized_tv_hello_user"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Main"
        android:layout_width="wrap_content"
        android:textColor="#0e4d9e"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="207dp"
        android:id="@+id/buttonAuthorizedGoHome"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/authorized_tv_timestamp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />


</android.support.constraint.ConstraintLayout>
